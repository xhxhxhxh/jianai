.message-container {
  padding-left: 40rpx;
}

.message {
  height: 164rpx;
  display: flex;
  box-sizing: border-box;
}

.message .avatar {
  flex: 0 0 104rpx;
  height: 100%;
  position: relative;
  margin-right: 24rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
}

.message .avatar .image {
  width: 100%;
  height: 100%;
}

.message .avatar .message-num {
  position: absolute;
  top: 28rpx;
  right: -4rpx;
  min-width:34rpx;
  height:34rpx;
  background:#FFE224;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 34rpx;
  border-radius: 17rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
}

.message .content-box {
  flex: 1 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f0f0f0;
  padding: 30rpx 40rpx 30rpx 0;
  box-sizing: border-box;
  overflow: hidden;
}

.content-box .content-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 32rpx;
}

.content-top .name {
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}

.content-top .time {
  font-size:20rpx;
  font-weight:bold;
  color:#999999;
}

.content-bottom {
  font-size:26rpx;
  color:rgba(153,153,153,1);
  line-height:36rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.delete .weui-slideview__btn{
  background-color: #FF3A39!important;
}