.banner {
  box-sizing: border-box;
}

.my-navigation .weui-navigation-bar__inner {
  background-size: cover !important;
}

.banner .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #000000;
  line-height: 56rpx;
  text-align: center;
}

.money {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 80rpx;
  font-weight: bold;
  color: #000000;
  line-height: 100rpx;
}

.money .image {
  width: 40rpx;
  height: 40rpx;
}

.recharge-area {
  border-radius: 32rpx;
  margin-top: -32rpx;
  padding: 60rpx 40rpx 0;

  background-color: #fff;
}

.recharge-area .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #000000;
  line-height: 50rpx;
  margin-bottom: 40rpx;
}

.recharge-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.recharge-box .item {
  width: 212rpx;
  height: 126rpx;
  border-radius: 14rpx;
  border: 2rpx solid #EEEFEE;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-bottom: 24rpx;
}

.recharge-box .gold {
  font-size: 40rpx;
  font-weight: bold;
  color: #000000;
  line-height: 52rpx;
}

.recharge-box .rmb {
  font-size: 24rpx;
  font-weight: bold;
  color: #000000;
  line-height: 34rpx;
}

.recharge-box .gold .image {
  width: 32rpx;
  height: 32rpx;
}
