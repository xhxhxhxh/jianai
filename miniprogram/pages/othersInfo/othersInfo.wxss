page {
  background-color: #f6f6f6;
}

.otherInfo-container {
  position: relative;
}

.photo-index {
  position: absolute;
  top: 500rpx;
  right: 40rpx;
  width: 86rpx;
  height: 40rpx;
  background: #000000;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 40rpx;
  text-align: center;
}

.photo-box {
  height: 100%;
}

.photo-box .photo.applyPhoto {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.applyPhoto .title {
  width: 430rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 56rpx;
  text-align: center;
}

.applyPhoto .submit {
  width:510rpx!important;
  height:96rpx!important;
  border-radius:48rpx!important;
  font-size:32rpx!important;
  font-weight:600;
  color:rgba(255,255,255,1);
  padding: 0;
  line-height: 96rpx;
  margin-top: 44rpx;
}

.photo-box .photo {
  width: 100%;
  height: 100%;
 
  background-size: cover!important;
}

.baseInfo {
  border-radius: 32rpx 32rpx 0 0;
  margin-top: -32rpx;
  padding: 60rpx 40rpx 40rpx;
  background-color: #fff;
  position: relative;
  z-index: 10;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  line-height: 56rpx;
}

.baseInfo .title.name {
  font-size: 40rpx;
}

.tags-area {
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 0 32rpx;
  height: 52rpx;
  border-radius: 26rpx;
  border: 1px solid #E0E0E0;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  line-height: 52rpx;
  text-align: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.introduction-area {
  margin-top: 52rpx;
}

.introduction-area .introduction {
  margin-top: 20rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}

.introduction-area .introduction.tips {
  color: #999
}

.detail-area {
  margin-top: 60rpx;
}

.spouse-info, .hobby-info {
  margin-top: 16rpx;
  padding: 36rpx 40rpx 24rpx;
  background-color: #fff;
}

.hobby-info .title {
  margin-bottom: 32rpx;
}

.hobby-info .tags-area {
  margin-bottom: 40rpx;
}

.operate-area {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 172rpx;
  width: 100%;
  background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0) , rgba(255, 255, 255, 1));
  z-index: 100;
}

.operate-area .hi, .operate-area .cancel {
  position: absolute;
  top: 0;
  width: 322rpx;
  height: 112rpx;
  border-radius: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
}

.operate-area .hi {
  left: 40rpx;
  background-color: #FFE224;
}

.operate-area .hi .image {
  width: 54rpx;
  height: 54rpx;
  margin-right: 22rpx;
}

.operate-area .cancel {
  right: 40rpx;
  color: #fff;
}

.operate-area .close {
  border-radius: 50%;
  width: 56rpx;
  height: 56rpx;
  background-color: #fff!important;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}