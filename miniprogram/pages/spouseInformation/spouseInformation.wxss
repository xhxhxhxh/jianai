.spouseInformation-container {
  padding: 90rpx 40rpx 0;
  box-sizing: border-box;
}

.step-box {
  position: relative;
  width: 400rpx;
  height: 64rpx;
  margin: 0 auto;
}

.step {
  position: absolute;
  width:48rpx;
  height:48rpx;
  background:rgba(229,229,229,1);
  text-align: center;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  font-size:32rpx;
  top: 50%;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.step.left {
  left: 0;
  transform: translate(-50%, -50%);
}

.step.right {
  right: 0;
  transform: translate(50%, -50%);
}

.step.middle {
  left: 50%;
  transform: translate(-50%, -50%);
}

.step.show {
  background-color: #FF4F4C;
  width:64rpx;
  height:64rpx;
  font-size:36rpx;
}

.line {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  height:4rpx;
  background:rgba(229,229,229,1);
  width: 100%;
}

.information-select {
  margin-top: 55rpx;
  overflow-x: hidden;
  position: relative;
}

.information-box {
  display: flex;
  flex-wrap: nowrap;
  position: relative;
  top: 0;
  left: 0;
  transition: all .3s linear;
}

.information-select .information-item {
  flex: 0 0 100%
}

.submit {
  width:510rpx!important;
  height:96rpx!important;
  border-radius:48rpx!important;
  font-size:32rpx!important;
  font-weight:600;
  color:rgba(255,255,255,1);
  margin-top: 120rpx;
  padding: 0;
  line-height: 96rpx;
}
