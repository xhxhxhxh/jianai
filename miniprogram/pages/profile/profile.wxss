page {
  background-color: #f6f6f6;
}

.profile-container {
  padding: 40rpx 40rpx 60rpx 40rpx;
  background-color: #fff;
}

.verified {
  height: 124rpx;
  background: #FFFFFF;
  box-shadow: 0 0 16rpx 0 #F0F0F0;
  border-radius: 24rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
  align-items: center;
  margin-bottom: 60rpx;
}

.verified .left {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.verified .left .blod {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 12rpx;
}

.verified .left .normal {  
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
}

.verified .btn {
  width:158rpx!important;
  height:72rpx!important;
  border-radius:34rpx!important;
  font-size:32rpx!important;
  font-weight:600;
  color:rgba(255,255,255,1);
  padding: 0;
  line-height: 72rpx;
  margin: 0;
}

.info-area .name {
  font-size: 44rpx;
  font-weight: bold;
  color: #000;
  line-height: 60rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-area .setting {
  width: 50rpx;
  height: 50rpx;
}

.info-area .info {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  color: #333333;
  display: flex;
}

.info-area .info .label {
  margin-right: 16rpx;
}

.info-area .info .content {
  flex: 1;
  font-weight: bold;
  overflow-x: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-area .btn, .photo-area .btn {
  width:100%!important;
  height:88rpx!important;
  border-radius:44rpx!important;
  font-size:32rpx!important;
  font-weight:600;
  color:rgba(255,255,255,1);
  padding: 0;
  line-height: 88rpx;
  margin-top: 32rpx;
}

.photo-area {
  margin-top: 60rpx;
}

.photo-area .name {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  line-height: 50rpx;
  margin-bottom: 24rpx;
}

.photo-area .photo-box {
  display: flex;
  flex-wrap: nowrap;
}

.photo-box .default {
  flex: 0 0 200rpx;
  height: 200rpx;
  background: #999999;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}

.photo-box .photo {
  flex: 0 0 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}

.photo-box .photo + .photo {
  margin-left: 10rpx;
}

.photo-box .default .text {
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 40rpx;
}

.photo-box .default .camera {
  width: 72rpx;
  margin-bottom: 16rpx;
}

.photo-area .btn {
  margin-top: 48rpx;
}

.wallet {
  width: 750rpx;
  height: 146rpx;
  background: #FFFFFF;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
  box-sizing: border-box;
}

.wallet .left { 
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.wallet .right {
  display: flex;
  align-items: center;
}

.wallet .right .num {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.wallet .right .text { 
  font-size: 22rpx;
  color: #999999;
  margin-right: 10rpx;
  line-height: 34rpx;
}

.wallet .right .my-arrow {
  width: 22rpx;
  height: 22rpx;
  box-sizing: border-box;
  border-right: 4rpx solid #ccc;
  border-bottom: 4rpx solid #ccc;
  transform: rotate(-45deg);
}

.date-record {
  padding: 40rpx;
}

.date-record .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.date-record .header .left { 
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.date-record .header .right {
  display: flex;
  align-items: center;
}

.date-record .header .right .text { 
  font-size: 28rpx;
  color: #999999;
  margin-right: 6rpx;
}

.date-record .header .right .my-arrow {
  width: 16rpx;
  height: 16rpx;
  box-sizing: border-box;
  border-right: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
  transform: rotate(-45deg);
}

.date-record .record {
  height: 160rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding-left: 24rpx;
  padding-right: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.date-record .record .date {
  display: flex;
  flex-direction: column;
  
}

.record .date .day {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  line-height: 56rpx;
}

.record .date .month {
  font-size: 22rpx;
  color: #999999;
  line-height: 32rpx;
}

.record .content {
  margin-left: 40rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow-x: hidden;
}

.record .content .name {
  font-size: 32rpx;
  color: #333;
  overflow-x: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.record .content .status {
  flex: 0 0 158rpx;
  height: 72rpx;
  border-radius: 36rpx;
  text-align: center;
  line-height: 72rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 50rpx;
  background-color: #F0F0F0;
}

.record .content .status.red {
  color: #fff;
  background-color: #FF4F4C;
}

.my-dialog .weui-dialog{
  width: 600rpx;
  border-radius: 40rpx;
}

.my-dialog .weui-dialog .weui-dialog__bd {
  padding: 0 40rpx;
  margin-bottom: 62rpx;
  overflow-y: unset;
  display: flex;
  align-items: center;
  justify-content: center;
}

.my-dialog .weui-dialog__hd {
  padding-top: 40rpx;
  padding-bottom: 48rpx;
}

.my-dialog .weui-dialog__title {
  font-size:36rpx;
  color: #333;
}

.dialog-box {
  font-size:28rpx;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}


.dialog-box .text {
  font-size:28rpx;
  color:#999999;
  line-height:40rpx;
  margin-top: 34rpx;
}

.my-dialog .weui-dialog__ft {
  min-height: unset;
  line-height: unset;
}

.my-dialog .weui-dialog__ft::after {
  border-top: 0;
}

.my-dialog .weui-dialog__ft .weui-dialog__btn:first-child {
  background:rgba(246,246,246,1);
  font-size:32rpx;
  color:rgba(51,51,51,1);
  font-weight: 500;
  min-height: 96rpx;
  line-height: 96rpx;
}

.my-dialog .weui-dialog__ft .weui-dialog__btn:last-child {
  background:#FF4F4C;
  font-size:32rpx;
  color:#fff;
  font-weight: 500;
  min-height: 96rpx;
  line-height: 96rpx;
}

.noInfo {
  margin-top: 84rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.noInfo .image {
  width: 300rpx;
  height: 236rpx;
}

.noInfo .text {
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
  margin-top: 20rpx;
}
